<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projekt</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,500;0,700;1,500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projekt.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="header">
            <div class="header__container">
                <div class="header__nav">
                    <ul class="header__navlist">
                        <li class="header__element">
                            <a class="header__index" asp-area="" asp-page="/Index">TakeOver</a>
                        </li>
                        <li class="header__element">
                            <a class="header__link" asp-area="" asp-page="/Offers">Oferty</a>
                        </li>
                        <li class="header__element">
                            <a class="header__link" asp-area="" asp-page="/AddOffer">Dodaj rzecz</a>
                        </li>
                        <li class="header__element">
                            <a class="header__link" asp-area="" asp-page="/MyOffers">Moje oferty</a>
                        </li>
                    </ul>
                    <partial class="header__user" name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="main">
        <main role="main" class="main__body">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer__content">
            &copy; 2022 - TakeOver
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>