@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

        <form class="form" id="profile-form" method="post">
            <div class="form__field">
                <label asp-for="Username" class="form__label">Nazwa użytkownika</label>
                <input asp-for="Username" class="form__input" disabled />
            </div>
            <div class="form__field">
                <label asp-for="Input.PhoneNumber" class="form__label">Numer telefonu</label>
                <input asp-for="Input.PhoneNumber" class="form__input" />
                <span asp-validation-for="Input.PhoneNumber" class="form__error"></span>
            </div>
            <button id="update-profile-button" type="submit" class="form__submit">Zapisz</button>
            <div asp-validation-summary="ModelOnly" class="form__error"></div>
        </form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
