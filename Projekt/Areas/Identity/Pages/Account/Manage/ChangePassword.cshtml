@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Zmień hasło";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <div>
        <form class="form" id="change-password-form" method="post">
            <div class="form__field">
                <label asp-for="Input.OldPassword">Aktualne hasło</label>
                <input class="form__input" asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.OldPassword" class="form__error"></span>
            </div>
            <div class="form__field">
                <label asp-for="Input.NewPassword" class="form-label">Nowe hasło</label>
                <input class="form__input" asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.NewPassword" class="form__error"></span>
            </div>
            <div class="form__field">
                <label asp-for="Input.ConfirmPassword">Powtórz nowe hasło</label>
                <input class="form__input" asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="form__error"></span>
            </div>
            <button class="form__submit" type="submit">Aktualizuj hasło</button>
            <div asp-validation-summary="ModelOnly" class="form__error"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
