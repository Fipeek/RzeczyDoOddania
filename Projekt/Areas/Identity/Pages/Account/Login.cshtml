@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<h1>@ViewData["Title"]</h1>
<div>
    <div class="form__background">
        <section>
            <form class="register" id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="form__error"></div>
                <div class="register__field">
                    <label asp-for="Input.Email">Nazwa użytkownika</label>
                    <input id="login" asp-for="Input.Email" class="form__input" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="form__error"></span>
                </div>
                <div class="register__field">
                    <label asp-for="Input.Password">Hasło</label>
                    <input id="password" asp-for="Input.Password" class="form__input" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="form__error"></span>
                </div>
                <div>
                    <div>
                        <label asp-for="Input.RememberMe" class="register__checkbox">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="form__submit">Zaloguj się</button>
                </div>
                <div class="register__links">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Przypomnieć hasło?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij ponownie email weryfikacyjny</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
